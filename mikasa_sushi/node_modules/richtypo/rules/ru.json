{
	"defs": {
		"particles": "б|бы|ж|же|ли|ль",
		"months": "января|февраля|марта|апреля|мая|июня|июля|августа|сентября|ноября|декабря"
	},

	"rules": {
		"emdash": {
			"regex": " —",
			"result": "$(nbsp)—"
		},
		"etc": [
			{
				"regex": "и[ $(nbsp)]т\\. д\\.",
				"result": "и$(nbsp)т.$(nbsp)д."
			},
			{
				"regex": "и[ $(nbsp)]т\\. п\\.",
				"result": "и$(nbsp)т.$(nbsp)п."
			}
		],
		"spaces_lite": ["emdash", "etc"],

		"num": {
			"regex": "№ ",
			"result": "№$(nbsp)"
		},
		"para": {
			"regex": "§ ",
			"result": "§$(nbsp)"
		},
		"initials": {
			"regex": "((?:[А-ЯЁ]\\.\\s){1,2}[А-ЯЁ][а-яё]+)",
			"flags": "g",
			"result": "<nobr>$1</nobr>"
		},
		"hyphen": {
			"regex": "([^а-яёА-ЯЁ]|^)((?:[а-яёА-ЯЁ]{1,2}(?:\\-[а-яёА-ЯЁ]+))|(?:[а-яёА-ЯЁ]+(?:\\-[а-яёА-ЯЁ]{1,2})))(?![-а-яёА-ЯЁ])",
			"flags": "g",
			"result": "$1<nobr>$2</nobr>"
		},
		"particle": [
			{
				"regex": "([а-яёА-ЯЁ]) ($(particles))(?=[?!,.:;\"‘“»])",
				"flags": "g",
				"result": "$1$(nbsp)$2"
			},
			{
				"regex": "([а-яёА-ЯЁ])[ $(nbsp)]($(particles))[ $(nbsp)]",
				"flags": "g",
				"result": "$1$(nbsp)$2 "
			}
		],
		"currency": {
			"regex": "(\\d) (\\$|р\\.|руб\\.)",
			"result": "$1$(nbsp)$2"
		},
		"year": {
			"regex": "\\b(\\d{4}) (гг?\\.)",
			"result": "$1$(nbsp)$2"
		},
		"date": {
			"regex": "(\\d) ($(months))",
			"result": "$1$(nbsp)$2"
		},
		"spaces": ["num", "para", "initials", "hyphen", "particle", "currency", "year", "date"],

		"ellipsis": {
			"regex": "\\.{2,}",
			"result": "…"
		},
		"emdash_lite": [
			{
				"regex": "---?",
				"result": "—"
			},
			{
				"regex": " - ",
				"result": " — "
			},
			{
				"regex": ">- ",
				"result": ">— "
			},
			{
				"regex": "([,\\)])- ",
				"result": "$1 — "
			},
			{
				"regex": "(^|\\n)\\-",
				"result": "$1&mdash;",
				"comment": "For strange reason '\n—' replaces '\n' with space"
			}
		],
		"lite": ["ellipsis", "emdash_lite"],

		"quotes": [
			{
				"regex": "\"([а-яёa-z0-9])",
				"result": "«$1"
			},
			{
				"regex": "\"",
				"result": "»"
			}
		],

		"abbr": {
			"regex": "([А-ЯЁA-Z]{3,})",
			"flags": "g",
			"result": "<abbr>$1</abbr>"
		}
	}
}
